{
  "manifest_version": 2,
  "version": "1.0",
  "name": "LinkedIn AutoReply",
  "description": "Accept new LinkedIn connection requests and send them the custom messages of your choice in just in just one click",

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
    // default title is a popup message when the icon is hovered over
  },

  "permissions": [
    "https://www.linkedin.com/mynetwork/invitation-manager/",
    "https://www.linkedin.com/mynetwork/"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/mynetwork/invitation-manager/",
        "https://www.linkedin.com/mynetwork/"
      ],
      "js": ["scripts/accept-invite.js"]
    },
    {
      "matches": ["https://www.linkedin.com/messaging/compose/?after=mynetwork.index*"],
      "js": ["scripts/send-message.js"]
    }
  ],
  "author": "Charly MARTIN"
}
