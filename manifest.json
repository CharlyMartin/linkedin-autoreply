{
  "manifest_version": 2,
  "version": "1.0",
  "name": "LinkedIn AutoReply",
  "description": "Accept new LinkedIn connections and send them custom messages in just one click",

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
    // default title is a popup message when the icon is hovered over
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/mynetwork/invitation-manager/",
        "https://www.linkedin.com/mynetwork/"
      ],
      "js": ["scripts/accept-invite.js"]
    }
  ],
  "author": "Charly MARTIN"

}
